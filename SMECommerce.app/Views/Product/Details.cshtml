@model SMECommerce.app.Models.ProductModels.ProductDetails
@using SMECommerce.Models.EntityModels
@using SMECommerce.Databases.DbContexts



<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body">
            <div class="card-header">
                <h3>Product Details</h3>
            </div>
            <div class="row">
                <div class="col-12 col-sm-6">

                    <div class="col-12">
                        <img src="@Model.ProductPhotoUrl" class="product-image" alt="Product Image">
                    </div>

                </div>
                <div class="col-12 col-sm-6">
                    <h3 class="my-3">@Model.Name</h3>
                    <label asp-for="Description">Description</label>
                    <p>@Model.Description</p>
                    <label asp-for="Price">Price</label>
                    <p>@Model.Price BDT</p>
                    <label asp-for="ManufactureDate">Manufacture Date</label>
                    <p>@Model.ManufactureDate</p>
                    <label asp-for="CategoryId">Category</label>
                    <p>@Model.CategoryName</p>
                </div>
            </div>

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
